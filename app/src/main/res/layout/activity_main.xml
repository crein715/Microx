<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speech â†’ Tweet"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speak in any language. Get a tweet in English."
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="32dp" />

        <!-- API Key Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groq API Key"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etApiKey"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input"
                android:hint="gsk_..."
                android:textColorHint="@color/text_secondary"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free at console.groq.com"
                android:textColor="@color/accent_blue"
                android:textSize="11sp"
                android:layout_marginTop="6dp" />

        </LinearLayout>

        <!-- Language Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speech Language"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerLanguage"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:popupBackground="@color/bg_card" />

        </LinearLayout>

        <!-- Record Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tvRecordStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to speak"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginBottom="20dp" />

            <!-- Pulse ring behind button -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center">

                <View
                    android:id="@+id/viewPulse"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_pulse_ring"
                    android:alpha="0"
                    android:elevation="0dp" />

                <ImageButton
                    android:id="@+id/btnRecord"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_record_button"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:contentDescription="Record"
                    android:scaleType="centerInside"
                    android:elevation="8dp"
                    app:tint="@color/white" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/red_record"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Raw Speech Text -->
        <LinearLayout
            android:id="@+id/layoutRawText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¤  Recognized Speech"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvRawText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:lineSpacingMultiplier="1.4" />

        </LinearLayout>

        <!-- Loading Indicator -->
        <LinearLayout
            android:id="@+id/layoutLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="24dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminateTint="@color/accent_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Translating &amp; formatting with Groq AIâ€¦"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginStart="12dp" />

        </LinearLayout>

        <!-- Tweet Output -->
        <LinearLayout
            android:id="@+id/layoutTweet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ð•  Tweet Ready"
                    android:textColor="@color/accent_blue"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCharCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTweet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="17sp"
                android:lineSpacingMultiplier="1.5"
                android:textIsSelectable="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/btnCopy"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button_blue"
                    android:text="  ðŸ“‹ Copy  "
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/btnShare"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button_blue"
                    android:text="  â†— Share  "
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Error Display -->
        <TextView
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:textColor="@color/red_record"
            android:textSize="13sp"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_marginBottom="20dp" />

    </LinearLayout>
</ScrollView>
